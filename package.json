{
  "name": "@tezos-x/octez.connect-sdk",
  "description": "The beacon-sdk allows you to easily connect DApps with Wallets through P2P communication or a chrome extension.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/octez.connect.min.js",
  "types": "dist/esm/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "trilitech",
    "beacon",
    "crypto",
    "blockchain",
    "tezos",
    "decentralized",
    "dapp"
  ],
  "license": "MIT",
  "homepage": "https://trilitech.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/trilitech/octez.connect"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "npx tsx scripts/download-wallet-lists.ts",
    "build": "npm run check-version && lerna run tsc && npm run webpack:all",
    "serve": "static-server examples --port 8080",
    "webpack:all": "npm run webpack:sdk && npm run webpack:dapp && npm run webpack:wallet",
    "webpack:sdk": "webpack --mode=development --config webpack.config.js --entry=./packages/octez.connect-sdk/dist/cjs/index.js --output-path ./webpack_builds/sdk && terser --ecma=12 ./webpack_builds/sdk/main.js -o ./packages/octez.connect-sdk/dist/octez.connect.min.js && cp ./packages/octez.connect-sdk/dist/octez.connect.min.js ./examples/octez.connect.min.js",
    "webpack:dapp": "webpack --mode=development --entry=./packages/octez.connect-dapp/dist/cjs/index.js --output-path ./webpack_builds/dapp && terser --ecma=12 ./webpack_builds/dapp/main.js -o ./packages/octez.connect-dapp/dist/octez.connect.dapp.min.js",
    "webpack:wallet": "webpack --mode=development --entry=./packages/octez.connect-wallet/dist/cjs/index.js --output-path ./webpack_builds/wallet && terser --ecma=12 ./webpack_builds/wallet/main.js -o ./packages/octez.connect-wallet/dist/octez.connect.wallet.min.js",
    "prettier": "prettier --write 'src/**/*' '**/src/**/*' 'docs/**/*.md' 'example-dapp.html' 'example-wallet.html'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint-ci": "eslint 'src/**/*.ts' -f json -o lintReport.json || true",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --stream",
    "test-ci": "nyc --reporter=lcov npm test",
    "e2e": "npx playwright test e2e",
    "audit-ci": "npm audit --json > audit.json && node scripts/dependency-scanning.js",
    "prepare": "npm run build",
    "check-version": "ts-node --project tsconfig-cjs.json scripts/check-sdk-version.ts",
    "typedoc": "typedoc",
    "publish": "lerna run tsc && lerna publish",
    "bump:version": "lerna version --no-git-tag-version --exact",
    "bump:major": "lerna version --no-git-tag-version major --exact --yes",
    "bump:minor": "lerna version --no-git-tag-version minor --exact --yes",
    "bump:patch": "lerna version --no-git-tag-version patch --exact --yes",
    "bump:alpha": "lerna version --no-git-tag-version prerelease --preid alpha --exact --yes",
    "bump:beta": "lerna version --no-git-tag-version prerelease --preid beta --exact --yes",
    "build:ui": "cd packages/octez.connect-ui && npm run tsc && cd ../.. && npm run webpack:sdk"
  },
  "author": "Papers AG <contact@papers.ch> (https://papers.ch)",
  "dependencies": {
    "@tezos-x/octez.connect-blockchain-substrate": "file:packages/octez.connect-blockchain-substrate",
    "@tezos-x/octez.connect-blockchain-tezos": "file:packages/octez.connect-blockchain-tezos",
    "@tezos-x/octez.connect-blockchain-tezos-sapling": "file:packages/octez.connect-blockchain-tezos-sapling",
    "@tezos-x/octez.connect-core": "file:packages/octez.connect-core",
    "@tezos-x/octez.connect-dapp": "file:packages/octez.connect-dapp",
    "@tezos-x/octez.connect-transport-matrix": "file:packages/octez.connect-transport-matrix",
    "@tezos-x/octez.connect-transport-postmessage": "file:packages/octez.connect-transport-postmessage",
    "@tezos-x/octez.connect-transport-walletconnect": "file:packages/octez.connect-transport-walletconnect",
    "@tezos-x/octez.connect-types": "file:packages/octez.connect-types",
    "@tezos-x/octez.connect-ui": "file:packages/octez.connect-ui",
    "@tezos-x/octez.connect-utils": "file:packages/octez.connect-utils",
    "@tezos-x/octez.connect-wallet": "file:packages/octez.connect-wallet",
    "@walletconnect/sign-client": "2.18.0",
    "@walletconnect/types": "2.18.0",
    "@walletconnect/utils": "2.18.0",
    "@web3modal/standalone": "2.4.3",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@playwright/test": "^1.52.0",
    "@types/bs58check": "2.1.2",
    "@types/chrome": "0.0.315",
    "@types/jest": "^29.5.14",
    "@types/mocha": "10.0.10",
    "@types/node": "22.14.1",
    "@types/sinon": "17.0.4",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/eslint-plugin-tslint": "7.0.2",
    "@typescript-eslint/parser": "8.30.1",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^29.7.0",
    "browserify": "17.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "26.1.0",
    "jsdom-global": "3.0.2",
    "lerna": "8.2.2",
    "mocha": "11.1.0",
    "nyc": "17.1.0",
    "prettier": "3.5.3",
    "pretty-quick": "4.1.1",
    "resize-img": "2.0.0",
    "sinon": "20.0.0",
    "static-server": "2.2.1",
    "terser": "^5.39.0",
    "ts-node": "10.9.2",
    "tslint": "6.1.3",
    "typedoc": "0.28.2",
    "typedoc-plugin-internal-external": "2.2.0",
    "typescript": "5.8.3",
    "uglify-js": "3.19.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "files": [
    "/dist"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-version && pretty-quick --staged"
    }
  }
}
